<%- include("includes/head") %>

<body>
  <%- include("includes/flash") %>

  <div class="oscar-statue-sm"></div>

  <main class="login-layout p-3">
    <h1 class="text-center fw-bold fs-3 mb-3">Entre</h1>

    <form action="/login" method="POST" class="login-form">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>" />

      <div class="mb-3">
        <label for="email" class="form-label">E-mail</label>
        <input type="email" class="form-control" id="email" name="email" />
      </div>

      <div class="mb-3">
        <label for="password" class="form-label">Senha</label>
        <input
          type="password"
          class="form-control"
          id="password"
          name="password"
        />
      </div>

      <div class="d-flex justify-items-center align-items-center gap-2">
        <button type="submit" class="btn btn-primary">Entrar</button>
        <small class="text-body-secondary"
          >NÃ£o possui uma conta? Crie uma <a href="/cadastro">aqui</a></small
        >
      </div>
    </form>
  </main>
</body>

