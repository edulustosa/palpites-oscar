<%- include("includes/head") %>

<body
  class="vh-100 d-flex flex-column justify-content-center align-items-center"
>
  <%- include("includes/flash") %>

  <div class="oscar-statue-sm"></div>

  <main class="form-container rounded shadow-lg p-4">
    <h1 class="text-center fs-3 fw-bold mb-4">Entre</h1>

    <form action="/login" method="POST" class="user-form mobile-font">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>" />

      <div class="mb-3">
        <label for="email" class="form-label mobile-input">E-mail</label>
        <input type="email" class="form-control" id="email" name="email" />
      </div>

      <div class="mb-3">
        <label for="password" class="form-label mobile-input">Senha</label>
        <input
          type="password"
          class="form-control"
          id="password"
          name="password"
        />
      </div>

      <div class="d-flex justify-items-center align-items-center gap-3">
        <button type="submit" class="btn btn-primary btn-lg">Entrar</button>

        <small class="text-body-secondary"
          >NÃ£o possui uma conta? Crie uma <a href="/cadastro">aqui</a></small
        >
      </div>
    </form>
  </main>

<%- include("includes/footer") %>
