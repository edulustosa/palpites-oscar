<%- include("includes/head") %>

<body
  class="vh-100 d-flex flex-column justify-content-center align-items-center"
>
  <%- include("includes/flash") %>

  <div class="oscar-statue-sm"></div>

  <main class="form-container rounded shadow-lg p-4">
    <h1 class="text-center fs-3 fw-bold mb-4">Cadastre-se</h1>

    <form action="/cadastro" method="POST" class="user-form mobile-font">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>" />

      <div class="mb-3">
        <label for="username" class="form-label">Nome de Usuário</label>
        <input
          type="text"
          class="form-control mobile-input"
          id="username"
          name="username"
          autocomplete="off"
        />
      </div>

      <div class="mb-3">
        <label for="email" class="form-label">E-mail</label>
        <input
          type="email"
          class="form-control mobile-input"
          id="email"
          name="email"
          autocomplete="on"
        />
      </div>

      <div class="mb-3">
        <label for="password" class="form-label">Senha</label>
        <input
          type="password"
          class="form-control mobile-input"
          id="password"
          name="password"
        />
      </div>

      <div class="mb-3">
        <label for="confirmation" class="form-label">Repita a senha</label>
        <input
          type="password"
          class="form-control mobile-input"
          id="confirmation"
        />
      </div>

      <div class="d-flex justify-items-center align-items-center gap-3">
        <button type="submit" class="btn btn-primary btn-lg">Criar</button>

        <small class="text-body-secondary"
          >Já possui uma conta? Faça login <a href="/login">aqui</a></small
        >
      </div>
    </form>
  </main>

<%- include("includes/footer") %>
